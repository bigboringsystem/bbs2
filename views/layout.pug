doctype html
html
  head
    title bbs
    meta(charset='utf-8')
    meta(content='width=device-width, height=device-height, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0', name='viewport')
    meta(content='yes', name='apple-mobile-web-app-capable')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Space+Mono')
    link(rel='stylesheet', href='/css/shared.css' + version.cache)
    link(rel='stylesheet', href='/css/main.css' + version.cache)
    link(rel='alternate', href='/rss', type='application/atom+xml', title='BBS Feed')
    if analytics
      script(type='text/javascript', src='/js/analytics.js')

  body
    header
      a(href='/') bbs

    ul.actions
      if session
        li
          a(href='/posts') my posts
        li
          a(href='/discover') discover
        li
          a(href='/links') more
        li
          a(href='/logout') log out
      else
        li
          a(href='/discover') discover
        li
          a(href='/rss') RSS
        li
          a(href='/privacy') privacy policy

    block subheader

    .wrapper
      .content
        block content
        block login
          if !session
            h2 enter your phone number to sign in
            form(method='post', action='/login')
              p Enter your number without spaces or dashes
              p You may need to prepend with + for non-U.S/Canadian numbers
              input(type='tel', name='phone', required)
              if error
                p.error= error
              input(type='hidden', name='crumb', value=crumb)
              button(type='submit') send my PIN

        block footer

    block scripts

